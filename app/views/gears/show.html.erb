
<div class="container">
  <div class="row">

  <div class="left col-sm-6">
  <% if @gear.photos? %>
    <% @gear.photos.each do |photo| %>
      <%= cl_image_tag photo.path, width: 600, height: 400, crop: :fill %>
    <% end %>
  <% else %>
    <%= image_tag "mb-#{rand(1..5)}.jpg"%>
  <% end %>
  <h1><%= @gear.name%></h1>
  <ul>
    <li> <h3>$<%=@gear.price%></h3></li>
    <li> <h3> Description: <%= @gear.description %></h3></li>
    <li> <h3> Size: <%= @gear.size %></h3></li>
  </ul>
    <div class="link">
      <%= link_to "Book it", new_gear_booking_path(@gear), {class: "btn btn-primary"}  %>
      <%= link_to "Back", gears_path, {class: "btn btn-info"} %>
    </div>
  </div>

    <div class="right col-sm-6">
      <% user_id =  @gear.user_id %>
      <% @user = User.find(user_id)  %>
    <ul>
      <li><%= @user.username %></li>
      <li><%= @user.email %></li>
      <li><%= @user.phone_number %></li>
      <li><%= @gear.address %></li>
    </ul>
    </div>
  </div>
</div>
